@model List<EntityLayer.Concrete.Dtos.ToptancilarDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Toptancı Adı</th>
        <th>Urun Adı</th>
        <th>Adet</th>
        <th>SatisFiyati</th>
        <th>#</th>
        <th>#</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ToptanciID</th>
            <td>@item.ToptanciAdi</td>
            <td>@item.UrunAdi</td>
            <td>@item.Adet</td>
            <td>@string.Format("{0:C2}", item.SatisFiyati)</td>
            <td><a href="/Islemler/Create/@item.ToptanciID?satismi=false" class="btn btn-primary">Alım Yap</a></td>
            <td><a href="/Toptancilar/Delete/@item.ToptanciID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Toptancilar/CreateandUpdate/@item.ToptanciID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Toptancilar/CreateandUpdate/" class="btn btn-info">Ekle</a>

